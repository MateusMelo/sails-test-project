<div class="container">
    <div class="row">
        
        <ol class="breadcrumb">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li class="active">Usuários</li>
        </ol>

        <% if (req.session.flash && req.session.flash.successUserMessage) { %>
            <div class="alert alert-success"> <%=req.flash('successUserMessage')%> </div>
        <% } %>

        <div class="search">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar usuário...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button">Buscar</button>
                </span>
            </div>
        </div>

    	<table class="table table-hover">
    		<thead>
    			<tr>
	    			<th>Nome</th>
	    			<th>Email</th>
	    			<th>Ações</th>
	    		</tr>
    		</thead>
    		<tbody>
                <% users.forEach(function(user)  { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/admin/users/edit/<%= user.id %>">Editar</a>
                            <button class="btn btn-danger btn-sm remove">Excluir</button>
                        </td>
                    </tr>
                <% }); %>
    		</tbody>
    	</table>
    </div>
</div>