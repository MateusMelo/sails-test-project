<div class="container">
    <div class="row">
        
        <ol class="breadcrumb">
            <li><a href="/admin/dashboard">Dashboard</a></li>
            <li class="active">Usuários</li>
        </ol>

        <% if (req.session.flash && req.session.flash.successUserMessage) { %>
            <div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <%= req.flash('successUserMessage') %> 
            </div>
        <% } %>

        <div class="search">
            <form action="">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Buscar usuário..." name="q" value="<%= (req.query && req.query.q) ? req.query.q : '' %>">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">Buscar</button>
                    </span>
                </div>
            </form>
        </div>

    	<table class="table table-hover">
    		<thead>
    			<tr>
	    			<th>Nome</th>
	    			<th>Email</th>
	    			<th>Ações</th>
	    		</tr>
    		</thead>
    		<tbody>
                <% users.forEach(function(user)  { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/admin/users/edit/<%= user.id %>">Editar</a>
                            <a class="btn btn-danger btn-sm remove" href="/admin/users/delete" data-id="<%= user.id %>">Excluir</a>
                        </td>
                    </tr>
                <% }); %>
    		</tbody>
    	</table>
    </div>
</div>