<div class="container">
    <div class="row">
        <div class="login-form">

            <h1>Registrar</h1>
            <h4>JÃ¡ tem uma conta? <a href="/">Entrar</a></h4>
            
            <% if(req.session.flash && req.session.flash.signupMessage){ %>
               <div class="alert alert-danger">
                    <%= req.session.flash.signupMessage %>
               </div>
            <% } %>

            <form action="signup" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="name" placeholder="Nome" name="name" value="<%= (req.session.flash && req.session.flash.name) ? req.flash('name')[0] : '' %>">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email" value="<%= (req.session.flash && req.session.flash.email) ? req.flash('email')[0] : '' %>">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password" placeholder="Senha" name="password">
                </div>

                <button type="submit" class="btn btn-primary btn-block">Registrar</button>
            </form>

        </div>
    </div>
</div>

