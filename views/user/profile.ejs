<div class="container">
    <div class="row">
    	
    	<ol class="breadcrumb">
            <li><a href="/dashboard">Dashboard</a></li>
            <li class="active">Perfil</li>
        </ol>

		<div class="col-sm-10 col-md-8 col-md-offset-2">

			<% if(req.session.flash && req.session.flash.profileMessage){ %>
               <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <%= req.flash('profileMessage') %>
               </div>
            <% } %>

            <% if(req.session.flash && req.session.flash.successProfileMessage){ %>
               <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <%= req.flash('successProfileMessage') %>
               </div>
            <% } %>

			<form class="form-horizontal" action="profile" method="POST">
				<div class="form-group">
					<label for="name" class="col-sm-2 control-label">Nome</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="name" placeholder="Nome" name="name" value="<%= req.session.user.name %>">
					</div>
				</div>
				<div class="form-group">
					<label for="email" class="col-sm-2 control-label">Email</label>
					<div class="col-sm-10">
						<input type="email" class="form-control" id="email" placeholder="Email" name="email" value="<%= req.session.user.email %>">
					</div>
				</div>
				<div class="form-group">
					<label for="password" class="col-sm-2 control-label">Senha</label>
					<div class="col-sm-10">
						<input type="password" class="form-control" id="password" name="password" placeholder="Senha">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-primary update-btn">Atualizar</button>
					</div>
				</div>
			</form>

		</div>

    </div>
</div>